<div class="row">
  <div class="col-md-12">
    <h2><%= @question.title %></h2>
    <div>Content: <%= @question.content %></div>
    <div>Name: <%= @question.name %></div>
    <hr>

    <h2>Answer</h2>
    <% if @question.answers.any? %>
      <table class="table table-striped">
        <thead class="thead-light">
          <tr>
            <th>Answer</th>
            <th>Name</th>
            <th>Menu</th>
          </tr>
        </thead>
        <tbody>
          <% @question.answers.each do |answer| %>
            <tr>
              <td>
                <%= answer.content %>
              </td>
              <td>
                <%= answer.name %>
              </td>
              <td>
                [Edit] 
                [Delete]
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No answer yet.</p>
    <% end %>
  </div>
</div>